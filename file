package com.mycompany.lab1;
import java.util.Scanner;
/**
 *
 * @author madelynschackart
 */
public class date {
    int day, month, year;
    static Scanner scan = new Scanner(System.in);
    
    public date()
    {
        day = 0;
        month = 0;
        year = 0;
    }
    
    public date(int d, int m, int y)
    {
        day = d;
        month = m;
        year = y;
    }
    
    public void input()
    {
        System.out.println("Please enter a date as month day year");
        month = scan.nextInt();
        day = scan.nextInt();
        year = scan.nextInt();
        
        if(month>12)
            month = 12;
        
        if(month<1)
            month = 1;
        
        if(day>31)
            day = 31;
        
        if(day<1)
            day = 1;
    }
    
    public void output()
    {
        System.out.println("" + month + "/" + day + "/" + year); //empty string converts whole thing into string
    }
    /**
     * @param args the command line arguments
     */
    
    public boolean before(date other)
    {
        if(this.year < other.year)
            return true;
        else if(this.year > other.year)
            return false;
        else if(this.month < other.month)
            return true;
        else if(this.month > other.month)
            return false;
        else if(this.day < other.day)
            return true;
        else
            return false;
    }
    
    public static void main(String[] args) {
        date today = new date(19, 7, 2022);
        date anotherDay = new date();
        today.output();
        anotherDay.input();
        anotherDay.output();
        
        if(today.before(anotherDay))
            System.out.println("Today comes before another day");
        else
            System.out.println("Today comes after another day");
    }
    
}
